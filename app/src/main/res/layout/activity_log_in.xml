<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".LogIn">

    <TextView android:text = "Aquarium Management System"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/apptitle"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "User Login"
        android:id = "@+id/pagetitle"
        android:layout_below = "@id/apptitle"
        android:layout_centerHorizontal = "true"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nemologo"
        android:src="@drawable/nemo_logo"
        android:layout_below="@id/pagetitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/enteruser"
        android:hint = "Username"
        android:focusable = "true"
        android:layout_marginTop = "46dp"
        android:layout_below = "@+id/nemologo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/enterpass"
        android:layout_below="@id/enteruser"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/loginbtn"
        android:layout_below="@id/enterpass"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>